{
  "name": "@workspace/sdk",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "sdk:generate:application": "pnpm with-env kubb generate --config ./config/application.kubb.config.ts",
    "sdk:generate:platform": "pnpm with-env kubb generate --config ./config/platform.kubb.config.ts",
    "sdk:generate": "pnpm sdk:generate:application && pnpm sdk:generate:platform",
    "sdk:generate:format:application": "biome format --write ./src/application/api/generated",
    "sdk:generate:format:platform": "biome format --write ./src/platform/api/generated",
    "clean": "rm -rf .turbo node_modules",
    "lint": "biome check .",
    "format": "biome format --write .",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "@workspace/env": "workspace:*",
    "react": "~19.1.0",
    "react-dom": "~19.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@kubb/cli": "^4.4.1",
    "@kubb/core": "^4.4.1",
    "@kubb/plugin-client": "^4.4.1",
    "@kubb/plugin-oas": "^4.4.1",
    "@kubb/plugin-react-query": "^4.4.1",
    "@kubb/plugin-ts": "^4.4.1",
    "@kubb/plugin-zod": "^4.4.1",
    "@workspace/tsconfig": "workspace:*",
    "@types/node": "^20.12.6"
  },
  "exports": {
    "./application": "./src/application/index.ts",
    "./platform": "./src/platform/index.ts"
  }
}