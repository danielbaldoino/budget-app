{
  "name": "@workspace/db",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "db:tenant:generate": "pnpm with-env drizzle-kit generate --config ./src/tenant/drizzle.config.ts",
    "db:tenant:migrate": "pnpm with-env tsx src/tenant/migrate.ts",
    "clean": "rm -rf .turbo node_modules",
    "lint": "biome check .",
    "format": "biome format --write .",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@workspace/encryption": "workspace:*",
    "@workspace/env": "workspace:*",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@workspace/tsconfig": "workspace:*",
    "drizzle-kit": "^0.31.1",
    "tsx": "4.19.4",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./tenant": "./src/tenant/index.ts",
    "./schema": "./src/schema/index.ts",
    "./tenant/schema": "./src/tenant/schema/index.ts",
    "./types": "./src/lib/types.ts",
    "./orm": "./src/lib/orm.ts",
    "./env": "./src/lib/env.ts"
  }
}